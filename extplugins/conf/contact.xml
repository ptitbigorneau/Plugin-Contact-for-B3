<configuration plugin="contact">
    <settings name="settings">
<!--min level required to use the contact command -->
        <set name="minlevel">1</set>
<!--min level required to use the acontact command -->
        <set name="acontactlevel">20</set>
<!--min level required to use the bancontact command -->
        <set name="bancontactlevel">100</set>
<!--min level required to use the listmail command -->
		<set name="frommail">from e-mail</set>
<!--e_mail adress receive to exemple@adress.com-->
		<set name="tomail">to e_mail</set>
<!--Name of your server -->
		<set name="nameserver">name server</set>
<!--Name of your smtp server (localhost or smtp.exemple.com-->
		<set name="smtpserver">localhost</set>
<!--For gmail smtp server your user name-->
		<set name="gmailusername">GMAIL USER NAME</set>
<!--For gmail smtp server your password-->
		<set name="gmailpwd">GMAIL PASSWORD</set>
<!--max messages-->
		<set name="maxmessage">5</set>
<!--temp minute max messages-->
		<set name="tempmaxmessage">60</set>
<!--temp minute between two messages-->
		<set name="tempmessage">5</set>
        </settings>
</configuration>

